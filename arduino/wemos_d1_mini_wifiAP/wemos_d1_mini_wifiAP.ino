void notifyClients() {
  ws.textAll(String(ledState));
}
void handleWebSocketMessage(void *arg, uint8_t *data, size_t len) {
  AwsFrameInfo *info = (AwsFrameInfo *)arg;
  if (info->final && info->index == 0 && info->len == len && info->opcode == WS_TEXT) {
    data[len] = 0;
    Serial.printf("WebSocket client sent data %s\n", (char *)data);
    if (strcmp((char *)data, "toggle") == 0) {
      ledState = !ledState;
      notifyClients();
    }
  }
}

void onEvent(AsyncWebSocket *server, AsyncWebSocketClient *client, AwsEventType type,
             void *arg, uint8_t *data, size_t len) {
  switch (type) {
    case WS_EVT_CONNECT:
      Serial.printf("WebSocket client #%u connected from %s\n", client->id(), client->remoteIP().toString().c_str());
      break;
    case WS_EVT_DISCONNECT:
      Serial.printf("WebSocket client #%u disconnected\n", client->id());
      break;
    case WS_EVT_DATA:
      handleWebSocketMessage(arg, data, len);
      break;
    case WS_EVT_PONG:
    case WS_EVT_ERROR:
      break;
  }
}

void initWebSocket() {
  ws.onEvent(onEvent);
  server.addHandler(&ws);
}

// replace the %STATE% placeholder with ON if the ledState is 1. Otherwise, replace it with OFF
String processor(const String &var) {
  if (var == "STATE") {
    String result = ledState ? "ON" : "OFF";
    Serial.printf("Replacing %s by %s\n", var, result);
    return result;
  }
  return String();
}

void startMDNS() {
  if (!MDNS.begin(DomainName, WiFi.softAPIP())) {
    Serial.println("[ERROR] MDNS responder did not setup");
    while (1) {
      delay(1000);
    }
  } else {
    Serial.println("MDNS setup is successful!");
  }
}

void setup() {
  Serial.begin(9600);
  delay(6000);
  //while (!Serial.available()) {}

  Serial.print("Setting soft-AP configuration ... ");
  Serial.println(
    WiFi.softAPConfig(apIP, apGateway, apSubnet)
